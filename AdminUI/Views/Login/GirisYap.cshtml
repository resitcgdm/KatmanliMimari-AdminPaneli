@model Entities.Concrete.User
@{
}
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello, world!</title>
    <style>
        .form-check-input:checked {
            background-color: grey;
            border-color: none;
        }

        .form-check-input:focus {
            border-color: none;
            outline: 0;
            box-shadow: none;
        }
    </style>
</head>
<body>

    <div class="container my-5 " style="border:1px solid gray;width:700px;height:700px;border-radius:30px;background-color:orange;">

        <div class="container d-flex justify-content-center"> <img src="~/ReaLogoEN.png" style="width:500px;height:200px;" /></div>


        <div class="row align-items-center">


            <div class="col-12 col-lg-6">
                <form asp-action="GirisYap" asp-controller="Login" method="post">
                    <div class="row mb-3">
                        <label for="inputEmail" class="col-sm-2 col-form-label text-muted">Email</label>
                        <div class="col-sm-10">
                            <input name="Username" type="text" class="form-control" id="inputEmail">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword" class="col-sm-2 col-form-label text-muted">Şifre</label>
                        <div class="col-sm-10">
                            <input name="Password" type="Password" class="form-control" id="inputPassword">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck">
                                <label class="form-check-label" for="gridCheck">
                                    Beni Hatırla
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row p-2 mb-3">
                        <input class="btn btn-primary" type="submit" value="Login" />
                    </div>
                </form>

            </div>
            <div class="d-none d-lg-block col-lg-6">
                <img src="https://www.gossipto.com/loginimg.jpg" style="width:95%;border-radius:25px;" />
            </div>
        </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


</body>
</html>